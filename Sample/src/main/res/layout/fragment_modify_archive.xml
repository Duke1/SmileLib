<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/span_space"
            app:divider="@drawable/line_shape"
            app:showDividers="middle">

            <!--姓名-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="姓名"/>

                    <EditText
                        android:id="@+id/name"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--性别-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="性别"/>

                    <EditText
                        android:id="@+id/sex"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--民族-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="民族"/>

                    <EditText
                        android:id="@+id/nation"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--生日-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="生日"/>

                    <EditText
                        android:id="@+id/birthday"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--籍贯-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="籍贯"/>

                    <EditText
                        android:id="@+id/nativePlace"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--户籍类别-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="户籍类别"/>

                    <EditText
                        android:id="@+id/familyType"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--婚姻状况-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="婚姻状况"/>

                    <EditText
                        android:id="@+id/marital_status"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--学历-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="学历"/>

                    <EditText
                        android:id="@+id/degree"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--政治面貌-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="政治面貌"/>

                    <EditText
                        android:id="@+id/political_level"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--健康状况-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="健康状况"/>

                    <EditText
                        android:id="@+id/health_status"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--身份证-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="身份证"/>

                    <EditText
                        android:id="@+id/id_card"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>

            <!--家庭住址-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/EditListItemStyle.Label"
                        android:text="家庭住址"/>

                    <EditText
                        android:id="@+id/house_address"
                        style="@style/EditListItemStyle.InputEdit"/>
                </LinearLayout>
            </RelativeLayout>


        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>


    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/menu_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/span_space"
        android:layout_marginRight="@dimen/span_space"
        app:fab_colorNormal="@color/white"
        app:fab_colorPressed="@color/white"
        app:fab_plusIconColor="#414141"/>
</RelativeLayout>