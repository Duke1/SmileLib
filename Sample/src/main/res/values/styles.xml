<resources>

    <!-- Base application theme. -->


    <style name="AppActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="elevation">0dp</item>
        <item name="homeAsUpIndicator">@mipmap/ic_launcher</item>
        <item name="titleTextStyle">@style/AppActionBar.TitleStyle</item>
    </style>


    <style name="AppActionBar.Transparent" parent="AppActionBar">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="AppActionBar.TitleStyle" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HorizontalLine" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.25dp</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="VerticalLine" parent="">
        <item name="android:layout_width">0.25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#000000</item>
    </style>


    <style name="View.Divider" parent="">
        <item name="android:background">#1A2D3437</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>


    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    !-- 自定义Dialog -->

    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="MenuListItemStyle" parent="">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_list_item_height</item>
        <item name="android:background">@drawable/menu_item_selector</item>
        <item name="android:textColor">@color/menu_item_text_selector</item>
        <item name="android:textSize">@dimen/app_text_size_medium</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="EditListItemStyle.Label" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="EditListItemStyle.InputEdit" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/span_space</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
